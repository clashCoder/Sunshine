<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Used in Action Bar, and in AndroidManifest to tell the device the name of this app.
        It's to keep this short, so your launcher icon isn't displayed with "The greatest Weather"
        or something similar
    -->
    <string name="app_name">Sunshine</string>

    <!-- Example String -->
    <string name="hello_world">Hello world!</string>
    <!--
        By convention, "action" denotes that this String will be used as the label for an Action,
        typically from the action bar. The ActionBar is limited real estate, so shorter is better.
    -->
    <string name="action_settings">Settings</string>

    <!-- Menu label to view the user's preferred location -->
    <string name="action_map">Map</string>

    <!-- Menu label to fetch updated weather info from the server -->
    <string name="action_refresh" translatable="false">Refresh</string>
    <string name="title_activity_detail">DetailActivity</string>
    <string name="activity_settings">Settings</string>
    <string name="title_activity_settings">SettingsActivity</string>

    <!-- Label for the location preference [CHAR LIMIT=30] -->
    <string name="pref_location_label">Location</string>

    <!-- Key name for storing location in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_location_key" translatable="false">location</string>

    <!-- Default postal code for location preference [CHAR LIMIT=NONE] -->
    <string name="pref_location_default" translatable="false">94043</string>

    <!-- label for the temperature units preference [CHAR LIMIT=30] -->
    <string name="pref_temperature_unit_label">Temperature Unit</string>

    <!-- Key name for the temperature units preference [CHAR LIMIT=NONE] -->
    <string name="pref_temperature_unit_key" translatable="false">unit</string>

    <!-- Label for the metric option in temperature unit preference [CHAR LIMIT=25] -->
    <string name="pref_temperature_unit_label_metric" translatable="false">Metric</string>

    <!-- Label for the imperial option in temperature unit preference [CHAR LIMIT=25] -->
    <string name="pref_temperature_unit_label_imperial" translatable="false">Imperial</string>

    <!-- Value in SharedPreferences for metric temperature unit option [CHAR LIMIT=NONE] -->
    <string name="pref_temperature_unit_metric">metric</string>

    <!-- Value in SharedPreferences for imperial temperature unit option [CHAR LIMIT=NONE] -->
    <string name="pref_temperature_unit_imperial">imperial</string>

</resources>
